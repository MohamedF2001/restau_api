<body>
    <div class="container mt-5">
        <center>
            <h1>USER</h1>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Image</th>
                    </tr>
                </thead>
                <tbody>
                    <% item.forEach(function(item) { %>
                        <tr>
                            <td><%= item.nomCat %></td>
                            <td><%= item.descriptionCat %></td>
                            <!-- <td><img src="<%=item.image%>" width="50" height="50" ></td> -->
                            <td><img src="<%= item.imageCat %>" width="50" height="50"></td>
                            <td>
                                <!-- Bouton pour la suppression (envoie une requête DELETE) -->
                                <form action="/supprimercategorie/<%= item._id %>" method="POST" onsubmit="return confirm('Voulez-vous vraiment supprimer cette catégorie ?')">
                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </center>
    </div>

