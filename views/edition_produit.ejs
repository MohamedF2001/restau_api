<!DOCTYPE html>
<html lang="fr">
<head>
    <!-- ... Vos balises meta et title ... -->

    <!-- Ajoutez les liens vers les fichiers CSS de Bootstrap -->
    <meta charset="utf-8">
    <title>Modifier un produit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <center>
            <h1>Modifier le produit</h1>
            <form action="/modifier/<%= produit._id %>" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="nom" class="form-label"><b>Nom du produit :</b></label>
                    <input type="text" name="nom" id="nom" class="form-control" value="<%= produit.nom %>" required>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label"><b>Description :</b></label>
                    <textarea name="description" id="description" class="form-control" required><%= produit.description %></textarea>
                </div>

                <div class="mb-3">
                    <label for="prix" class="form-label"><b>Prix :</b></label>
                    <input type="text" name="prix" id="prix" class="form-control" value="<%= produit.prix %>" required>
                </div>

                <div class="mb-3">
                    <label for="categorie" class="form-label"><b>Cat√©gorie :</b></label>
                    <select name="categorie" id="categorie" class="form-control" required>
                        <% categories.forEach(function(categorie) { %>
                            <option value="<%= categorie._id %>" <%= produit.categorie.toString() === categorie._id.toString() ? 'selected' : '' %>><%= categorie.nomCat %></option>
                        <% }) %>
                    </select>
                </div>                
                <div class="mb-3">
                    <label for="imageProd" class="form-label">Image actuelle :</label>
                    <img src="<%= produit.imageProd %>" width="50" height="50">
                </div>

                <div class="mb-3">
                    <label for="imageProd" class="form-label">Nouvelle image :</label> 
                    <input type="file" name="imageProd" id="imageProd" class="form-control">
                </div>

                <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
            </form>
        </center>
    </div>

    <!-- Ajoutez les liens vers les fichiers JavaScript de Bootstrap (jQuery est requis pour Bootstrap) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
